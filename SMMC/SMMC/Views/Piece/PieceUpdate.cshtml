@model SMMC.Models.Piece

@{
    ViewData["Title"] = "Update Piece Info";
}
<h2>Update</h2>
<h4>Piece</h4>
<hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="PieceUpdate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PieceID" />

                <div class="form-group">
                    <label asp-for="Type" class="control-label">Piece Type</label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <br />

                <div class="alert alert-info" role="alert">
                    <strong>N.B:</strong> Use comma separated for multiple parts. E.g. Flute, Base, Trumpet
                </div>
                <div class="form-group">
                    <label asp-for="Part" class="control-label">Part(s)</label>
                    <input asp-for="Part" class="form-control" />
                    <span asp-validation-for="Part" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="License" class="control-label"></label>
                    <input asp-for="License" class="form-control" />
                    <span asp-validation-for="License" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TotalCopies" class="control-label">Total Copies</label>
                    <input asp-for="TotalCopies" type="number" step="1" min="0" class="form-control" />
                    <span asp-validation-for="TotalCopies" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DistributedCopies" class="control-label">Distributed Copies</label>
                    <input asp-for="DistributedCopies" type="number" step="1" min="0" class="form-control" />
                    <span asp-validation-for="DistributedCopies" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ReturnedCopies" class="control-label">Returned Copies</label>
                    <input asp-for="ReturnedCopies" type="number" step="1" min="0" class="form-control" />
                    <span asp-validation-for="ReturnedCopies" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="PieceUpdateView">Back to Piece Update List</a>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
