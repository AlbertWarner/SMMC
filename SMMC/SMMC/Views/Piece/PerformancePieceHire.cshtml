@model IEnumerable<SMMC.Models.Piece>


@{
    ViewData["Title"] = "Performance Piece Hire";
}
<h2>Performance Piece Hire</h2>
<hr />
<p>
    <a asp-action="PerformancePieceHireAdd"><input type="submit" value="Hire Performance Piece" class="btn btn-primary" /></a>
</p>

<br />

<h2>Piece Hire Record for Performance</h2>
<hr />



<table class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Part)
            </th>
            <th>
                Performance Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Returned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Part)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PerformanceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Returned)
                </td>
                <td>
                    <a asp-action="PerformancePieceHireUpdate" asp-route-id="@item.PieceHireID">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>