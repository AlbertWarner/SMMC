@model SMMC.Models.Piece

@{
    ViewData["Title"] = "Hire Piece";
}
<h2>Hire</h2>
<h4>Piece</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EnrolmentPieceHireAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*<div class="form-group">
                <label asp-for="PerformanceID" class="control-label">Performance</label>
                @Html.DropDownList("PerformanceID", (IEnumerable<SelectListItem>)ViewBag.performanceDrp, "Please Select", new { id = "PerformanceID", @class = "form-control" })
                <span asp-validation-for="PerformanceID" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="EnrolmentID" class="control-label">Enrolment</label>
                @Html.DropDownList("EnrolmentID", (IEnumerable<SelectListItem>)ViewBag.enrolmentDrp, new { id = "EnrolmentID", @class = "form-control" })
                <span asp-validation-for="EnrolmentID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PieceID" class="control-label">Piece</label>
                @Html.DropDownList("PieceID", (IEnumerable<SelectListItem>)ViewBag.pieceDrp, new { id = "PieceID", @class = "form-control" })
                <span asp-validation-for="PieceID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Returned" class="control-label"></label>
                <input type="checkbox" asp-for="Returned" class="form-control" />
                <span asp-validation-for="Returned" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PieceHireDate" class="control-label">Piece Hire Date</label>
                <input type="date" asp-for="PieceHireDate" class="form-control" />
                <span asp-validation-for="PieceHireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="EnrolmentPieceHire">Back to Enrolment Piece Hire List</a>
    @*<a href="javascript:void(0);" onclick="history.go(-1);">Back to List</a>*@
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}