@model IEnumerable<SMMC.Models.Piece>


@{
    ViewData["Title"] = "Enrolment Piece Hire";
}
<h2>Enrolment Piece Hire</h2>
<hr />
<p>
    <a asp-action="EnrolmentPieceHireAdd"><input type="submit" value="Hire Enrolment Piece" class="btn btn-primary" /></a>
</p>

<br />

<h2>Piece Hire Record for Enrolments</h2>
<hr />

<table class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Part)
            </th>
            <th>
                Piece Hire Date
                @*@Html.DisplayNameFor(model => model.HireDate)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Returned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Part)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PieceHireDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Returned)
                </td>
                <td>
                    <a asp-action="EnrolmentPieceHireUpdate" asp-route-id="@item.PieceHireID">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>