@model IEnumerable<SMMC.Models.Instrument>

@{
    ViewData["Title"] = "View Instruments";
}
<h2>Instruments</h2>
<hr />
@*<p>
    <a asp-action="InstrumentAdd">Add New Instrument</a>
</p>*@
<table class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="InstrumentDetails" asp-route-id="@item.ID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>