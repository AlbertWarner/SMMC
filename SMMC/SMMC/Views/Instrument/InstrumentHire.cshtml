@model IEnumerable<SMMC.Models.Instrument>

@{
    ViewData["Title"] = "Instruments Hire";
}
<h2>Instruments Hire</h2>
<hr />
<p>
    <a asp-action="InstrumentHireAdd"><input type="submit" value="Hire Instrument" class="btn btn-primary" /></a>

</p>

<br />

<h2>Instruments Hire Record for Students</h2>
<table class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                Hire ID
                @*@Html.DisplayNameFor(model => model.ID)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                Instrument Name
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                Hire Date
                @*@Html.DisplayNameFor(model => model.HireDate)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee) ($)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repair)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Returned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repair)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Returned)
            </td>
            <td>
                <a asp-action="InstrumentHireDetails" asp-route-id="@item.ID">Hire Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>