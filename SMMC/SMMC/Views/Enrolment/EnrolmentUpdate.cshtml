@model SMMC.Models.Enrolment

@{
    ViewData["Title"] = "Update Enrolment";
}
<h2>Update</h2>
<h3>Enrolment</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EnrolmentUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EnrolmentID" />


            <div class="form-group">
                <label asp-for="Firstname" class="control-label">Student</label>
                @Html.DropDownList("PersonID", (IEnumerable<SelectListItem>)ViewBag.studentCost, new { id = "PersonID", @class = "form-control" })
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LessonName" class="control-label">Lesson</label>
                @Html.DropDownList("LessonID", (IEnumerable<SelectListItem>)ViewBag.openCost, new { id = "LessonID", @class = "form-control" })
                <span asp-validation-for="LessonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnsembleName" class="control-label">Ensembles</label>
                @Html.DropDownList("EnsemblesID", (IEnumerable<SelectListItem>)ViewBag.ensembles, new { id = "EnsemblesID", @class = "form-control" })
                <span asp-validation-for="EnsembleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label">Enrolment Date</label>
                @Html.TextBoxFor(m => m.Date, "{0:dd-MM-yyyy}", new { htmlAttributes = new { @class = "form-control" }, @class = "form-control" })
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="EnrolmentUpdateView">Back to Update List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}