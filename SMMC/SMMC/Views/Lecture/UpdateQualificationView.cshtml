@model IEnumerable<SMMC.Models.Lecture>

@{
    ViewData["Title"] = "Update Tutors Qualifications";
}
<h2>Tutors Qualifications Update</h2>
<hr />
<br />
<table class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                Skill
            </th>
            <th>
                Role
            </th>
            <th>
                Qualification Name
            </th>
            <th>
                Instrument
            </th>
            <th>
                
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.skill)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.qualificationType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.instrument)
                </td>
                <td>
                    <a href="/Lecture/UpdateQualification?qualificationTypeID=@item.qualificationTypeID">Update</a>
                    @*<a asp-action="StudentDetails" asp-route-id="@item.personID">Details</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

