@model IEnumerable<SMMC.Models.Performance>

@{
    ViewData["Title"] = "Delete Performances";
}
<h2>Performances</h2>
<hr />
<table class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                Performance Type
                @*@Html.DisplayNameFor(model => model.PerformanceType)*@
            </th>
            <th>
                Performance Title
                @*@Html.DisplayNameFor(model => model.PerformanceTitle)*@
            </th>
            <th>
                Ensembles Name
                @*@Html.DisplayNameFor(model => model.EnsemblesName)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th>
                Performance Date
                @*@Html.DisplayNameFor(model => model.PerformanceDate)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PerformanceType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PerformanceTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnsemblesName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PerformanceDate)
                </td>
                <td>
                    <a asp-action="PerformanceDelete" asp-route-id="@item.PerformanceID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>