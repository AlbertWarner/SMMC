@model IEnumerable<SMMC.Models.Roster>

@{
    ViewData["Title"] = "View Roster";
}
<h2>Roster</h2>
<hr />
<p>
    <a asp-action="RosterAdd"><input type="submit" value="Add New Roster Entry" class="btn btn-primary" /></a>
</p>
<br />
<table class="table table-striped table-bordered dt-responsive nowrap">
    <thead>
        <tr>
            <th>
                Roster ID
            </th>
            <th>
                Firstname
            </th>
            <th>
                Surname
            </th>
            <th>
                Lesson Name
            </th>
            <th>
                Ensembles Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                Start Time
            </th>
            <th>
                Roster Date
            </th>
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RosterID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LessonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnsemblesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RosterDate)
            </td>
            @*<td>
            <a asp-action="PerformanceDetails" asp-route-id="@item.PerformanceID">Details</a>
        </td>*@
        </tr>
        }
    </tbody>
</table>