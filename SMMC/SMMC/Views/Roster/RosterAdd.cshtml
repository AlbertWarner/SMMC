@model SMMC.Models.Roster

@{
    ViewData["Title"] = "Add Roster";
}
<h2>Add</h2>
<h4>Roster</h4>
<hr />

<div class="row">
    <div class="alert alert-danger col-md-8" role="alert">
        <strong>Note</strong> Only a Senior or Head tutor may teach lessons at Levels 7 or 8 (<strong>Community Orchestra Ensembles</strong>).
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="RosterAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PersonID" class="control-label">Tutor</label>
                @Html.DropDownList("PersonID", (IEnumerable<SelectListItem>)ViewBag.tutorsDrp, new { id = "PersonID", @class = "form-control" })
                <span asp-validation-for="PersonID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LessonID" class="control-label">Lessons</label>
                @Html.DropDownList("LessonID", (IEnumerable<SelectListItem>)ViewBag.lessonsDrp, new { id = "LessonID", @class = "form-control" })
                <span asp-validation-for="LessonID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EnsemblesID" class="control-label">Ensembles</label>
                @Html.DropDownList("EnsemblesID", (IEnumerable<SelectListItem>)ViewBag.ensemblesDrp, new { id = "EnsemblesID", @class = "form-control" })
                <span asp-validation-for="EnsemblesID" class="text-danger"></span>
            </div>

            <br /><br />

            <div class="alert alert-danger" role="alert">
                <strong>N.B:</strong> Ensure that the selected date is the same as the Lesson date.
            </div>
            <div class="form-group">
                <label asp-for="RosterDate" class="control-label">Roster Date</label> <br />
                <input asp-for="RosterDate" type="date" class="form-control" />
                <span asp-validation-for="RosterDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="RosterView">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}